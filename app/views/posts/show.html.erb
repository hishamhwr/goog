<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        hisham
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image.url(:thumb) %>
    </div>
   <div class="audio center-block">
  <%= audio_tag  @post.audio.url, controls: true %>
</div>
  <p class="dod">
  <%= @post.title %><br>
  <%= @post.description %><br>
  <%= @post.hashtags %><br>
  <%= link_to @post.youtube %><br>
  <%= link_to @post.soundcloud %><br>
  <%= link_to @post.itunes %>
  </p>
    <div class="text-center">
      <%= link_to "Back", posts_path %>
    </div>
  </div>
</div>